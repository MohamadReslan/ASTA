<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="ASTA_DB">

        <class>fr.efrei2023.ASTA.model.entity.CompanyEntity</class>
        <class>fr.efrei2023.ASTA.model.entity.MissionEntity</class>
        <class>fr.efrei2023.ASTA.model.entity.EvaluationEntity</class>
        <class>fr.efrei2023.ASTA.model.entity.ProgramEntity</class>
        <class>fr.efrei2023.ASTA.model.entity.UserEntity</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/astadb"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.jdbc.user" value="root"/>
            <property name="eclipselink.jdbc.password" value="root"/>
        </properties>
    </persistence-unit>
</persistence>
